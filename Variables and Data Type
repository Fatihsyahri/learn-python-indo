# sebuah variabel akan menggunakan memory untuk menyimpan suatu nilai
# variabel bekerja dengan menggunakan tanda "="
# contoh

nama = "Fatih"
print("nama saya adalah " + nama)

# ......TYPE CASTING......
# mengubah sebuah tipe data ke tipe data lainnya
# dapat menggunakan int(), float(), str()

angka_int= 5
angka_str= str(angka_int)
angka_float= float(angka_int)

print(type(angka_int))
print(type(angka_str))
print(type(angka_float))

#contoh
angka = 10
angka_koma = 10.6
nama = "fatih"
 
print(str(angka) + " " + str(angka_koma))

# mengambil input dan output dari user
nama = input("Enter your Name: ")
print("Hello, " + nama + "!")
 
